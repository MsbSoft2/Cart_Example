
@model IEnumerable<Cart_Example.Models.ViewModels.ShowCartViewModel>

<p class="card-header text-center mb-3">سبد خرید شما</p>
@if (Model.Any())
{
    @foreach (var item in Model)
    {
        <div class="media text-right">
            <img src="/Images/@item.ImageName" class="ml-3 rounded-sm" width="90" alt="@item.ImageName">
            <div class="media-body">
                <h6 class="mt-0">@item.Title</h6>
                <p class="badge badge-success">
                    تعداد : @item.Count
                </p>
            </div>
        </div>
        <hr />
    }
}
else
{
    <p class="alert alert-warning text-center">سبد خرید خالی است</p>
}
@if (Model.Any())
{
    <a asp-controller="Orders" asp-action="ShowOrder" class="my-3 btn btn-block btn-info rounded-pill text-white">
        نمایش فاکتور

    </a>
}
